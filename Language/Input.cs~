using System;

namespace TextAdventure.Language
{
	/// <summary>
	/// A class handling all input.
	/// </summary>
	public static class Input
	{
		public static void ProcessLine ()
		{
			string line = GetLine ();
			Processor.ProcessInput (line);
		}

		/// <summary>
		/// Gets a line from the console.
		/// </summary>
		/// <returns>
		/// A line of input that the user had put in.
		/// </returns>
		public static string GetLine ()
		{
			return Console.ReadLine ();
		}
	}
}

